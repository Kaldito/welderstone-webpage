<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Website with Chatbot</title>
    <script
        chatbot_id="667aef4bb7cbd6d01222f530"
        src="https://app.thinkstack.ai/bot/thinkstackai-loader.min.js"
        async
        onload="initializeChatbot()">
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        #openChatButton, #whatsapp-btn {
            position: fixed;
            right: 20px;
            width: 60px;
            height: 60px;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }
        #openChatButton {
            background-color: #007bff; /* Azul para el botón de chatbot */
            bottom: 100px; /* Ajustado para dejar espacio entre los botones */
        }
        #whatsapp-btn {
            background-color: #25d366; /* Verde para el botón de WhatsApp */
            bottom: 20px;
        }
    </style>
</head>
<body>
    <button class="fas fa-robot" id="openChatButton">
    </button>
    <button id="whatsapp-btn">
        <i class="fab fa-whatsapp"></i>
    </button>
    <script>
        function initializeChatbot() {
            document.getElementById('openChatButton').addEventListener('click', function() {
                // Check if the chatbot script is loaded
                if (window.thinkstackai && typeof window.thinkstackai.openChat === 'function') {
                    window.thinkstackai.openChat();
                } else {
                    alert('Chatbot is not loaded yet.');
                }
            });
        }
    </script>
</body>
</html>
