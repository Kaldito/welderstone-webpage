        <section id="editar-producto">
           
<form action="/FacturApiPost" method="POST" enctype="multipart/form-data">

  <!-- Datos del cliente -->
  <div class="form-floating mb-3">
    <label for="legal_name">Nombre Legal del Cliente:</label>
    <input type="text" class="form-control" name="legal_name" id="legal_name" required>
  </div>

  <div class="form-floating mb-3">
    <label for="email">Email del Cliente:</label>
    <input type="email"class="form-control" name="email" id="email" required>
  </div>

  <div class="form-floating mb-3">
    <label for="tax_id">RFC o Tax ID del Cliente:</label>
    <input type="text" class="form-control" name="tax_id" id="tax_id" required>
  </div>

  <div class="form-floating mb-3">
    <label for="tax_system">Sistema de Impuestos del Cliente:</label>
    <input type="text" class="form-control" name="tax_system" id="tax_system" required>
  </div>

  <!-- Dirección del cliente -->
  <div class="form-floating mb-3">
    <label for="country">País:</label>
    <input type="text" class="form-control" name="addresscountry" id="country" required>
  </div>

  <div class="form-floating mb-3">
    <label for="zip">Código Postal:</label>
    <input type="text" class="form-control" name="addresszip" id="zip" required>
  </div>

  <div class="form-floating mb-3">
    <label for="city">Ciudad:</label>
    <input type="text" class="form-control" name="addresscity" id="city" required>
  </div>

  <!-- Detalles del producto -->
  <div class="form-floating mb-3">
    <label for="quantity">Cantidad:</label>
    <input type="number" class="form-control" name="quantity" id="quantity" required>
  </div>

  <div class="form-floating mb-3">
    <label for="description">Descripción del Producto:</label>
    <input type="text" class="form-control" name="description" id="description" required>
  </div>
  
  <div class="form-floating mb-3">
    <label for="description">Product key</label>
    <input type="text" class="form-control" name="productkey" id="productkey" required>
  </div>
  
  <div class="form-floating mb-3">
    <label for="description">Precio:</label>
    <input type="number" class="form-control" name="precio" id="precio" required>
  </div>
    
  <div class="form-floating mb-3">
    <label for="description">Iva</label>
    <input type="text" class="form-control" name="iva" id="iva" required>
  </div>

    
  <div class="form-floating mb-3">
    <label for="description">Rate</label>
    <input type="number" class="form-control" name="rate" id="rate" step="0.01" required>
  </div>


  <!-- Uso, forma de pago, método de pago y condiciones -->
  <div class="form-floating mb-3">
    <label for="use">Uso:</label>
    <input type="text" class="form-control" name="use" id="use" required>
  </div>

  <div class="form-floating mb-3">
    <label for="payment_form">Forma de Pago:</label>
    <input type="text" class="form-control" name="payment_form" id="payment_form" required>
  </div>

  <div class="form-floating mb-3">
    <label for="payment_method">Método de Pago:</label>
    <input type="text" class="form-control" name="payment_method" id="payment_method" required>
  </div>

  <div class="form-floating mb-3">
    <label for="conditions">Condiciones:</label>
    <input type="text" class="form-control" name="conditions" id="conditions" required>
  </div>

  <!-- Botón de envío -->
  <div class="col-6" style="text-align: end;">
    <button type="submit" class="btn btn-danger" id="sendMessageButton">Agregar Artículo</button>
</div>

</form>

