<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%- include('layouts/metaData'); -%>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welderstone - About</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <!-- CSS Stylesheet-->
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/panelusuarios.css">

    <!-- FontAwesome-->
    <script src="https://kit.fontawesome.com/c1d78340ca.js" crossorigin="anonymous"></script>  
</head>
<body>
    <!-- NAVBAR -->
    <%- include('layouts/navbar'); -%>
    
    <section id="presentation">
<br>

        <h1 class="text-center hola">Panel de usuarios</h1>
           
        <body class="text-center">
            <br>
        <div class="center">
            Filtrar por rol:
            <form method="POST"  action="/FiltrosUsuarios">
            <select name="role" id="FiltroHistorial" class="custom-select2" >
                <option value="admin" Selected>Admin</option>
                <option value="Ventas" >Ventas</option>
                <option value="Proyectos" >Proyectos </option>
                <option value="Cotizacion" >Cotización </option>
                <option value="costumer" >Comprador </option>

              </select>
              <button type="submit" class="btn btn-info btn-sm">Filtrar</button>
              <br>
            </form>
        </div>             
        <br>


        <form method="post" action="/FiltrosUsuarios2" >
            <select name="Tipo" id="FiltroHistorial2" class="BusquedaSelect">
                <option value="Nombre" selected>Nombre de usuario</option>
                <option value="Id" selected>Id del usuario</option>

            </select>
            <input type="text" name="busqueda" class="busquedaInput" placeholder="Inserte los datos que desea filtrar">
            <button class="btn btn-outline-danger" type="reset">Limpiar</button>
            <button type="submit" class="btn btn-outline-danger"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>

<div class="row mt-5">
    <div class="col-md-10 offset-md-1">

        <table class="table table-hover table-condensed width">
            <thead>
                <% for (var a = 0; a < usuarios.docs.length; a++) { %>

                <tr>
                    <th style="width:20%">Nombre de usuario </th>
                    <th style="width:20%">Id del usuario </th>
                    <th style="width:20%">Rol </th>


                    
                </tr>
            </thead>        
            <tbody>


                    <tr>
                    <td> <%= usuarios.docs[a].username%></td>
                    <td> <%= usuarios.docs[a]._id%></td>
                    <td> 
                    
                    
    <form method="post" action="/Roles" >
        <select name="Roles" class="custom-select">

            <% if( usuarios.docs[a].role === 'admin' ){ %>


                <option value="admin" Selected>Admin</option>
                <option value="Ventas" >Ventas</option>
                <option value="Proyectos" >Proyectos </option>
                <option value="Cotizacion" >Cotización </option>
                <option value="costumer" >Comprador </option>

                
                <% } %> 
                <% if( usuarios.docs[a].role === 'Ventas' ){ %>
    
    
                    <option value="admin" >Admin</option>
                    <option value="Ventas" Selected>Ventas</option>
                    <option value="Proyectos" >Proyectos </option>
                    <option value="Cotizacion" >Cotización </option>
                    <option value="costumer" >Comprador </option>
    
                    <% } %> 
                    <% if( usuarios.docs[a].role === 'Proyectos' ){ %>
    
    
                        <option value="admin" >Admin</option>
                        <option value="Ventas" >Ventas</option>
                        <option value="Proyectos" Selected>Proyectos </option>
                        <option value="Cotizacion" >Cotización </option>
                        <option value="costumer" >Comprador </option>
    
                        
                        <% } %> 
            
                        <% if( usuarios.docs[a].role === 'Cotizacion' ){ %>
    
    
                            <option value="admin" >Admin</option>
                            <option value="Ventas" >Ventas</option>
                            <option value="Proyectos" >Proyectos </option>
                            <option value="Cotizacion" Selected>Cotización </option>
                            <option value="costumer" >Comprador </option>
    
                            
                            <% } %> 
                
    
                            <% if( usuarios.docs[a].role === 'costumer' ){ %>
    
    
                                <option value="admin" >Admin</option>
                                <option value="Ventas" >Ventas</option>
                                <option value="Proyectos" >Proyectos </option>
                                <option value="Cotizacion" >Cotización </option>
                                <option value="costumer"Selected>Comprador </option>
    
                                
                                <% } %> 

                            </select>
                            <input type="hidden" value="<%= usuarios.docs[a].googleId%>" name="UsuarioId">
                            <button type="submit" class="btn btn-outline-danger">Asignar Rol</button>

</form>
                    
                    
                    </td>

                </tr>

                <tr>

    <td>

        
    </td>
</tr>

            </tbody>
       
            <% } %> 

        </table>
 
    </div>
</div>

<% if(FiltroPaginado === false){ %>

    <% for (var a = 1; a < usuarios.totalPages+1; a++) { %> <a href="/PanelUsuarios?page=<%=[a]%>" type="submit" id="sendMessageButton" class="botonPaginacion btn-dark "><%=[a]%></a><% } %>
    
    <% } %> 

    <% if(FiltroPaginado === true && Filtro !=="Nombre" && Filtro !== "Id"  ){ %>

        <% for (var a = 1; a < usuarios.totalPages+1; a++) { %> <a href="/FiltrosUsuarios?page=<%=[a]%>&amp;Filtro=<%=Filtro%>" type="submit" id="sendMessageButton" class="botonPaginacion btn-dark"><%=[a]%></a><% } %>
        
        <% } %> 

        <% if(FiltroPaginado === true  && Filtro ==="Nombre" || Filtro === "Id"){ %>
            <% for (var a = 1; a < usuarios.totalPages+1; a++) { %> <a href="/FiltrosUsuarios2?page=<%=[a]%>&amp;Filtro=<%=Filtro%>&amp;consulta=<%=consulta%>" type="submit" id="sendMessageButton" class="botonPaginacion btn-dark"><%=[a]%></a><% } %>
        
            <% } %> 

    </section>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script>
        const selectElement = document.getElementById('FiltroHistorial');
        const FiltroHistorial = "<%=Filtro%>";
      
        if (FiltroHistorial) {
          for (let i = 0; i < selectElement.options.length; i++) {
            if (selectElement.options[i].value === FiltroHistorial) {
              selectElement.options[i].selected = true;
              break;
            }
          }
        }
      </script> 
    <script>
        const selectElement2 = document.getElementById('FiltroHistorial2');
        const FiltroHistorial2 = "<%=Filtro%>";
      
        if (FiltroHistorial2) {
          for (let i = 0; i < selectElement2.options.length; i++) {
            if (selectElement2.options[i].value === FiltroHistorial2) {
              selectElement2.options[i].selected = true;
              break;
            }
          }
        }
      </script> 

<style>
    .custom-select {
      appearance: none;
      background-color: #ffffff;
      border: 1px solid #cccccc;
      border-radius: 5px;
      color: #555555;
      font-size: 16px;
      padding: 10px;
      width: 25%;
    }
    
    .custom-select:focus {
      outline: none;
      border-color: #2196F3;
      box-shadow: 0 0 0 2px rgba(33, 150, 243, 0.2);
    }
    
    .custom-select option {
      background-color: #ffffff;
      color: #555555;
    }
    .custom-select2 {
      appearance: none;
      background-color: #ffffff;
      border: 1px solid #cccccc;
      border-radius: 5px;
      color: #555555;
      font-size: 16px;
      padding: 10px;
      width: 5%;
    }
    
    .custom-select2:focus {
      outline: none;
      border-color: #2196F3;
      box-shadow: 0 0 0 2px rgba(33, 150, 243, 0.2);
    }
    
    .custom-select2 option {
      background-color: #ffffff;
      color: #555555;
    }
      </style>



</body>
</html>