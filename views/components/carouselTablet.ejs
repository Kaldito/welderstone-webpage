<!-- VERSIÓN TABLET -->
<div id="tablet-carousel">
    <div
        id="carouselTablet"
        class="carousel slide"
        data-bs-ride="carousel"
        data-bs-touch="true"
    >
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="video-container">
                    <video autoplay loop muted playsinline class="video-tablet">
                        <source src="/videos/WSweb_horizontal.mp4" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.video-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
