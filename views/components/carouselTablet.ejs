    overflow: hidden;
}

.video-tablet {
    width: 100%;  /* Usa todo el ancho de la pantalla */
    height: auto; /* Mantiene la proporción original */
    object-fit: cover; /* Evita bordes negros y recorta lo necesario */
}
</style>

