<style>
#customerForm {
    display: none;
    /* Estilos para el formulario cuando está oculto */
}
.popup4 {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: white;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
}
.green-button {
  background-color: green;
  color: white; /* Text color, can be adjusted as needed */
  border: none;
  padding: 10px 20px; /* Adjust padding as needed */
  cursor: pointer;
  /* Add any other styles you want for the button */
}

</style>
<script>
    const showFormButton = document.getElementById("showFormButton");
    const customerForm = document.getElementById("customerForm");

    showFormButton.addEventListener("click", () => {
        if (customerForm.style.display === "none") {
            customerForm.style.display = "block";
            showFormButton.textContent = "Ocultar Formulario";
        } else {
            customerForm.style.display = "none";
            showFormButton.textContent = "Mostrar Formulario";
        }
    });


    

</script>
<script>
      function openPopup4(id) {
  fetch(`/popup4/${id}`)
    .then(response => response.text())
    .then(html => {
      const popup4 = document.createElement('div');
      popup4.innerHTML = html;
      document.body.appendChild(popup4);
      const closeBtn = popup4.querySelector('.close-btn');
      closeBtn.addEventListener('click', () => {
        popup4.remove();
      });
    });
}
</script>